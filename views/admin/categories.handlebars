<h1>餐廳後台</h1>

<a href='/admin/restaurants'>Restaurants</a> | <a href='/admin/users'>Users</a>
<br />
<br />
{{#if category}}
<form action="/admin/categories/{{category.id}}?_method=PUT" method="POST">
  <div class="form-group">
    <input type="text" class="" name="name" id="name" placeholder="Enter category name" value="{{category.name}}">
    <button type="submit" class="btn btn-secondary">Submit</button>
  </div>
</form>
{{else}}
<form action="/admin/categories" method="POST">
  <div class="form-group">
    <input type="text" class="" name="name" id="name" placeholder="Enter category name">
    <button type="submit" class="btn btn-secondary">Create new</button>
  </div>
</form>
{{/if}}
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each categories}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.name}}</td>
      <td>
        <button type="button" class="btn btn-link">
          <a href="/admin/categories/{{this.id}}">
            Edit
          </a>
        </button>
        <form action="/admin/categories/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-link">Delete</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>