<div class="row">
  <div class="col-md-10 mx-auto mt-5 mb-3">
    <div class="row">
      <div class="col-md-4">
        <img src="{{user.image}}" class="img-responsive center-block" style="width: 100%; margin-right: 30px;">
      </div>
      <div class="col-md-8">
        <h5>{{user.name}}</h5>
        <h5>{{user.email}}</h5>
        <h5>{{comments.length}}已評論過的餐廳</h5>
        <h5>{{user.FavoritedRestaurants.length}}收藏的餐廳</h5>
        <h5>{{user.Followings.length}}followings（追蹤者）</h5>
        <h5>{{user.Followers.length}}followers（追隨者）</h5>
        <a href="/users/{{user.id}}/edit">
          <button type="button" class="btn btn-primary">edit</button>
        </a>
      </div>
    </div>
  </div>
</div>
<div class="col-md-10 mx-auto mt-5 mb-3">
  <div class="row">
    <div class="col-md-5">
      <div class="card">
        <div class="card-header">
          {{user.Followings.length}}followings（追蹤者）
        </div>
        <div class="card-body">
          <div class="row">
            {{#each user.Followings}}
            <a href="/users/{{this.id}}">
              <img src="{{this.image}}" class="img-responsive center-block"
                style="width: 100px; height: 100px; margin: 10px;">
              <!--<p>{{this.Restaurant.name}}</p>-->
            </a>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-7">
      <div class="card">
        <div class="card-header">
          {{comments.length}}已評論過的餐廳
        </div>
        <div class="card-body">
          <div class="row">
            {{#each comments}}
            <a href="/restaurants/{{this.Restaurant.id}}">
              <img src="{{this.Restaurant.image}}" class="img-responsive center-block"
                style="width: 100px; height: 100px; margin: 10px;">
              <!--<p>{{this.Restaurant.name}}</p>-->
            </a>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-md-5">
      <div class="card">
        <div class="card-header">
          {{user.Followers.length}}followers（追隨者）
        </div>
        <div class="card-body">
          <div class="row">
            {{#each user.Followers}}
            <a href="/users/{{this.id}}">
              <img src="{{this.image}}" class="img-responsive center-block"
                style="width: 100px; height: 100px; margin: 10px;">
              <!--<p>{{this.Restaurant.name}}</p>-->
            </a>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-7">
      <div class="card">
        <div class="card-header">
          {{user.FavoritedRestaurants.length}}收藏的餐廳
        </div>
        <div class="card-body">
          <div class="row">
            {{#each user.FavoritedRestaurants}}
            <a href="/restaurants/{{this.id}}">
              <img src="{{this.image}}" class="img-responsive center-block"
                style="width: 100px; height: 100px; margin: 10px;">
              <!--<p>{{this.Restaurant.name}}</p>-->
            </a>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>